{
    "$schema": "https://captainhookphp.github.io/captainhook/schema.json",
    "config": {
        "verbosity": "normal",
        "run-mode": "local",
        "fail-on-first-error": true,
        "ansi-colors": true
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": {
                    "label": "PHP: Syntax check"
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            },
            {
                "action": "php -d memory_limit=1G bin/phpstan analyze --no-progress",
                "options": {
                    "label": "PHPStan: Static analysis"
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            },
            {
                "action": "php -d memory_limit=512M bin/php-cs-fixer fix --dry-run --diff",
                "options": {
                    "label": "PHP-CS-Fixer: Code style"
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            },
            {
                "action": "php -d memory_limit=512M bin/phpat",
                "options": {
                    "label": "PHPat: Architecture rules"
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            },
            {
                "action": "php bin/console lint:twig templates/",
                "options": {
                    "label": "Twig: Template syntax"
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["twig"]
                    }
                ]
            }
        ]
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "#^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\\(.+\\))?!?: .{3,}#",
                    "error": "Commit message must follow Conventional Commits format: type(scope): description\nTypes: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert\nExample: feat(auth): add login functionality"
                }
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    }
}
